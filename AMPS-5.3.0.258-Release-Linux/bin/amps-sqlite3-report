if (( $# != 2))
then
  echo "Usage:"
  echo "    ./amps-sqlite3-report <amps-stats-db-file> <datetime>"
  echo ""
  echo "Example:"
  echo "    ./amps-sqlite3-report amps-stats.db  20170511T000000"
  exit 1
fi

# Get the source directory that contains this script and its fellow
# amps-sqlite3 script, which it depends upon.
SOURCE_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

echo "amps-sqlite3-report on $1 since $2"

for table in HCPUS HDISKS HMEMORY HNET ICLIENTS ICONFLATEDTOPICS ICONSOLE_LOGGERS ICPUS IFILE_LOGGERS IGLOBALS IMEMORY IMEMORY_CACHES IPROCESSORS IQUEUES IREPLICATIONS ISOW ISTATISTICS ILIFETIMES ISUBSCRIPTIONS ISYSLOG_LOGGERS ITRANSPORTS IVIEWS
do
  echo "TABLE $table"
  $SOURCE_DIR/amps-sqlite3 $1 "SELECT * FROM $table WHERE timestamp > timestamp('$2') ORDER BY timestamp"
done

